# Claude Code Sidecar Configuration
# Copy this file to .env and fill in your values

# Required: Your Claude Pro OAuth Token
# Get this by running: npx @anthropic-ai/claude-code login
CLAUDE_CODE_OAUTH_TOKEN=sk-ant-oat01-YOUR_TOKEN_HERE

# Optional: API Key to secure the sidecar service
# If set, Open WebUI must include this key when calling the service
CLAUDE_CODE_API_KEY=

# Optional: Open WebUI URL for auto-registration
OPENWEBUI_URL=http://localhost:8080

# Optional: Enable/disable the service
CLAUDE_CODE_ENABLED=true

# Optional: Timeout for Claude CLI commands (in seconds)
CLAUDE_CODE_TIMEOUT=60

# Optional: Path to Claude CLI command
CLAUDE_CODE_PATH=claude

# Optional: Working directory for Claude Code to access files
CLAUDE_WORKING_DIR=./workspace